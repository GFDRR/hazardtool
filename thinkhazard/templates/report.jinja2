{% extends "base.jinja2" %}

{% block name %}report{% endblock %}

{% block content %}

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">
          <img src="{{('thinkhazard:static/images/logo-small.png'|static_url)}}">
        </a>
      </div>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group form-group-lg">
          {% include 'search.jinja2' %}
        </div>
      </form>
      <div id="navbar" class="">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="">About</a>
          </li>
          <li>
            <a href="">Contact us</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div id="wrapper">
    <div id="report-wrapper" class="">
      <div id="report" role="tabpanel">
        <div id="report-header" class="text-center">
          <div class="logo-gfdrr"></div>
          <a id="pdf-link" href><img src="{{('thinkhazard:static/images/download.png'|static_url)}}">Download PDF</a>
          <h3>Report on Hazards</h3>
          <h2>{{ division.name }}</h2>
          <ul id="hazard-types-list" class="horizontal list-unstyled hazards" role="tablist">
            {% for hazard in hazards %}
            <li class="{{ hazard.level }}">
              <a href="#{{ hazard.mnemonic }}" aria-controls="{{ hazard.name }}" role="tab" data-toggle="tab">
                <img src="{{(('thinkhazard:static/images/hazard-icon-%s.png' % hazard.name.lower()) |static_url)}}" />
                {{ hazard.name }}
              </a>
            </li>
            {% endfor %}
          </ul>
        </div>
        <div id="report-body">
          <div class="container-fluid scrollable tab-content">
            <div id="default" class="row tab-pane active" role="tabpanel">
              <div class="col-md-12 overview">
              {% for hazard in hazards %}
                <a href="#{{ hazard.mnemonic }}" aria-controls="{{ hazard.name }}" role="tab" data-toggle="tab">
                  <h1 class="page-header level-{{ hazard.level }}">
                    {{ hazard.name }}
                    <small class="pull-right">{{ hazard.level }}</small>
                  </h1>
                </a>
              {% endfor %}
              </div>
            </div>
            {% for hazard in hazards %}
            <div id="{{ hazard.mnemonic }}" class="row tab-pane" role="tabpanel">
              <div class="col-md-12">
                <h1 class="page-header detail level-{{ hazard.level }}">
                  {{ hazard.name }}
                  <small class="pull-right">{{ hazard.level }}</small>
                </h1>
