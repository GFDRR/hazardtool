{% extends "base.jinja2" %}

{% from 'navbar.jinja2' import navbar%}

{% block name %}report{% endblock %}

{% block title %}
Think Hazard - {{ division.name}}
{% if current_hazard %}
 - {{ current_hazard.hazardtype.title }}
{% endif %}
{% endblock %}

{% block content %}


  {% set overview_url = 'report_overview'|route_url(divisioncode=division.code) %}

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="{{'index'|route_url}}">
          <span class="logo-think">Think</span><span class="logo-hazard">Hazard</span><span class="logo-think">!</span>
        </a>
      </div>
      <form id="search" class="navbar-form navbar-left" role="search">
        <div class="form-group form-group-lg">
          {% include 'search.jinja2' %}
        </div>
      </form>
      {{ navbar() }}
    </div>
  </nav>

  <div class="jumbotron">
    <div class="container">
      <a id="pdf-link" class="btn btn-default btn-xs pull-right" href><i class="fa fa-arrow-down"></i> Download PDF</a>

      <!-- breadcrumb -->
      <div class="breadcrumb">
        <div class="btn-group btn-group-xs">
          <button class="btn btn-default"><i class="fa fa-map-marker"></i></button>
          {% for parent in parents | reverse %}
          <a href="{{ 'report' | route_url(divisioncode=parent.code, hazardtype=current_hazard.hazardtype.mnemonic if current_hazard else '')}}"
             class="btn btn-default">
          {{ parent.name }}
          </a>
          {% endfor %}
          <button class="btn btn-default disabled">
            {{ division.name }}
          </button>
        </div>
      </div>
    </div>

    <div class="container text-center">

      <!-- Division name -->
      <h2>
        <a href="{{ overview_url }}" title="Go back to overview page">{{ division.name }}</a>
      </h2>

      {% if current_hazard %}
      <a id="overview-link" class="btn btn-default btn-xs pull-left" href="{{ overview_url }}" title="Go back to overview page"><i class="fa fa-home"></i> Overview</a>
      {% endif %}
      <ul id="hazard-types-list" class="horizontal list-unstyled hazards" role="tablist">
        {% for hazard in hazards %}
          {{ hazard_type(hazard) }}
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container {{ 'level-' + current_hazard.categorytype.mnemonic if current_hazard else '' }}">
    <div class="row">
      <div class="col-md-7">
        {% if current_hazard %}
          <h2 class="page-header detail">
            {{ current_hazard.hazardtype.title }}
            <em>
              <small class="pull-right">Hazard level: <span class="level">{{ current_hazard.categorytype.title }}</span>
              </small>
            </em>
          </h2>
          {% if current_hazard.description %}
          {{ current_hazard.description }}
          {% else %}
          {{ current_hazard.categorytype.description }}
          {% endif %}
          {% if current_hazard.recommendation_associations %}
          <h3>Recommendations</h3>
          <ul class="recommendations">
          {% for recommendation_association in current_hazard.recommendation_associations %}
            <li class="list-unstyled">{{ recommendation_association.recommendation.description }}</li>
          {% endfor %}
          </ul>
          {% endif %}
        {% else %}
          {% for hazard in hazards %}
          <a href="{{ 'report'|route_url(divisioncode=division.code, hazardtype=hazard.hazardtype.mnemonic) }}" aria-controls="{{ hazard.hazardtype.title }}">
            <h1 class="page-header level-{{ hazard.categorytype.mnemonic }}">
              {{ hazard.hazardtype.title }}
              <em>
                <small class="pull-right">Hazard level: <span class="level">{{ hazard.categorytype.title }}</span>
                </small>
              </em>
            </h1>
          </a>
          {% endfor %}
        {% endif %}
      </div>
      <div class="col-md-5">
        <div id="map-block" class="well">
          <div id="map">
            {% if parents.__len__() >= 1 %}
            <a id="map-drillup" class="btn btn-default btn-xs drillup control" href="{{ 'report' | route_url(divisioncode=parents[0].code, hazardtype=current_hazard.hazardtype.mnemonic if current_hazard else '')}}">
              <i class="btn-xs fa fa-search-minus"></i>
              Zoom out to {{ parent_division.name }}
            </a>
            {% endif %}
            <div id="zoom-in" class="btn-default btn-xs alert alert-dismissible disabled pull-right">
                Zoom in by clicking on an adminisrative area
                <i class="close btn-xs fa fa-close" data-dismiss="alert" aria-hidden="true"></i>
            </div>
          </div>
          {% if current_hazard %}
          <div class="caption level">
            {{ current_hazard.hazardtype.title}} hazard level
          </div>
          <div class="caption location">
            {{ division.name }}
          </div>
          <div id="legend">
            <ul>
              <li class="level-HIG col-md-6">
                <i class="square"></i>
                High
              </li>
              <li class="level-MED col-md-6">
                <i class="square"></i>
                Medium
              </li>
              <li class="level-LOW col-md-6">
                <i class="square"></i>
                Low
              </li>
              <li class="level-NPR col-md-6">
                <i class="square"></i>
                Not previously reported
              </li>
            </ul>
          </div>

          <div id="data-source" class="text-center">
            <h5>DATA SOURCE</h5>
            <div>** Put the sources here</div>
          </div>
          {% endif %}
        </div>
        {% if current_hazard.additionalinfo_associations %}
        <div id="further-resources" class="well">
          <h3>Further resources</h3>
          <p>For further information the following resources could be consulted:</p>
          <ul class="fa-ul">
          {% for additionalinfo_association in current_hazard.additionalinfo_associations %}
          <li><i class="fa-li fa fa-caret-right"></i>
            <a target="_blank" href="{{ additionalinfo_association.additionalinformation.accessurl }}">
              {{ additionalinfo_association.additionalinformation.title }}
            </a>
          </li>
          {% endfor %}
          </ul>
        </div>
        {% endif %}
        <div class="text-center">
          <a href="//www.gfdrr.org/" class="logo-gfdrr" title="Logo GFDRR" alt="Logo GFDRR"></a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block scripts %}
{% if debug %}
    <script src="{{('%s/openlayers/dist/ol-debug.js' % node_modules)|static_url}}"></script>
{% else %}
    <script src="{{('%s/openlayers/dist/ol.js' % node_modules)|static_url}}"></script>
{% endif %}
    <script>
      {% if current_hazard %}
      app.mapUrl = '{{ 'report_json'|route_url(divisioncode=division.code, hazardtype=current_hazard.hazardtype.mnemonic)}}';
      {% else %}
      app.mapUrl = '{{ 'report_overview_json'|route_url(divisioncode=division.code)}}';
      {% endif %}

      {%- if division %}
      app.divisionCode = {{division.code}};
      {%- else %}
      app.divisionCode = undefined;
      {%- endif %}

      app.divisionBounds = {{bounds}};
      {% if current_hazard %}
        app.hazardType = '{{current_hazard.hazardtype.mnemonic}}';
      {% endif %}
    </script>
{% endblock %}

{% macro hazard_type(hazard) %}
<li class="{{ hazard.categorytype.mnemonic }} text-center {{ 'active' if current_hazard and hazard.hazardtype.mnemonic == current_hazard.hazardtype.mnemonic else ''}}">
  <a
    {% if hazard.categorytype.mnemonic != 'no-data' %}
    href="{{'report'|route_url(divisioncode=division.code, hazardtype=hazard.hazardtype.mnemonic)}}"
    {% endif %}
     >
    <i class="fa fa-check icon"></i><br>
    {{ hazard.hazardtype.title }}
    {% if current_hazard and hazard.hazardtype.mnemonic == current_hazard.hazardtype.mnemonic %}
    <div class="arrow"></div>
    {% endif %}
  </a>
</li>
{% endmacro %}
