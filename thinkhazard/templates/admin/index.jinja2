{% extends "base.jinja2" %}

{% from 'common.jinja2' import navbar %}

{% block name %}admin{% endblock %}

{% block content %}
  {{ navbar('index') }}
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-primary">
          <div class="panel-heading text-center">
            Latest publication date:
            <strong>{{publication_date.strftime("%Y-%m-%d")}}</strong>
          </div>
        </div>
      </div>
      {% if running|length > 0 %}
      <div class="col-sm-12">
        <div class="panel panel-info">
          <div class="panel-heading">Running tasks</div>
          <ul class="list-group">
            {% for t in running %}
              <li class="list-group-item"><mark><strong>{{t['label']}}</strong></mark> started {{t['time_label']}}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
      {% endif %}
      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-heading">Tasks</div>
          <div class="panel-body">
            <h4>Administrative Divisions</h4>
            <p>
              Import administrative division from Geonode
            </p>
            <p class="text-right">
              <a
                class="btn btn-info"
                href="{{request.route_url('admin_add_task', _query={'task': 'admindivs'})}}"
                {% if 'admindivs' in running_keys %}
                disabled="disabled"
                {% endif %}
              >
                Import from Geonode
              </a>
            </p>
            <hr>
            <h4>Processing</h4>
            <p>
              Harvest, download, complete &amp; process.
            </p>
            <p class="text-right">
              <button class="btn btn-info">Process</button>
            </p>
            <hr>
            <h4>Translations</h4>
            <p>
              Fetch translations from transifex and reimport them into ThinkHazard.
            </p>
            <p class="text-right">
              <a
                class="btn btn-info"
                href="{{request.route_url('admin_add_task', _query={'task': 'transifex_fetch'})}}"
                {% if 'transifex_fetch' in running_keys %}
                disabled="disabled"
                {% endif %}
              >
                Import from Transifex
              </a>
            </p>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="panel panel-danger">
          <div class="panel-heading">Publication</div>
          <div class="panel-body">
            <h4>Publish</h4>
            <p>
              Publish current preview to public site.
            </p>
            <p class="text-right">
              <a
                class="btn btn-danger"
                href="{{request.route_url('admin_add_task', _query={'task': 'publish'})}}"
                {% if 'publish' in running_keys %}
                disabled="disabled"
                {% endif %}
              >
                Publish now
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block scripts %}
  <script>
  $(document).ready(function() {
    $('a[disabled]').on('click', function(e) {
      alert('Task already running')
      return false;
    })
  })
  </script>
{% endblock %}
